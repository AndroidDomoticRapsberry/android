<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.andoberry.adr.Humidificador" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="0dp"
        android:layout_weight="0.35" >

        <Button
            android:id="@+id/buttonAcceder"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/usuario"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42dp"
            android:background="@drawable/buttonshape"
            android:onClick="bOn"
            android:text="APAGADO" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonAcceder"
            android:layout_alignRight="@+id/buttonAcceder"
            android:layout_marginRight="66dp"
            android:text="%"
            android:textColor="#0033FF"
            android:textSize="85sp" />

        <TextView
             android:id="@+id/usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="106dp"
            android:layout_toLeftOf="@+id/textView2"
            android:text="0"
            android:textColor="#0033FF"
            android:textSize="85sp" />

    </RelativeLayout>

</LinearLayout>